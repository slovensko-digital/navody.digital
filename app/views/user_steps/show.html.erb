<%= content_for(:headerline, @user_journey.journey.title) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-third">
    <%= render 'shared/user_timeline' %>
  </div>
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-body sdn-content">
      <%= raw @current_step.description %>
    </div>

    <%= render 'user_journeys/todo_list', step: @current_step, user_task_by_tasks: @user_task_by_tasks %>

  </div>
</div>
