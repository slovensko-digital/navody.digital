<%= content_for :title, build_page_title('Ste občan SR?', 'Voľby do Európskeho parlamentu') %>
<%= content_for(:headerline, 'Voľby do Európskeho parlamentu') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @application_form do |f| %>
      <%= f.hidden_field :step %>
      <div class="govuk-form-group
        <% if @application_form.errors[:sk_citizen].any? %> govuk-form-group--error
        <% end %>">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
            <h2 class="govuk-fieldset__heading">
              Ste občan Slovenskej republiky?
            </h2>
          </legend>
          <% @application_form.errors[:sk_citizen].each do |error| %>
            <span class="govuk-error-message"><span class="govuk-visually-hidden">Chyba: </span><%= error %></span>
          <% end %>

          <div class="govuk-radios govuk-radios--inline">
            <div class="govuk-radios__item">
              <%= f.radio_button :sk_citizen, 'yes', class: "govuk-radios__input" %>
              <%= f.label :sk_citizen_yes, "Áno", class: "govuk-label govuk-radios__label" %>
            </div>

            <div class="govuk-radios__item">
              <%= f.radio_button :sk_citizen, 'no', class: "govuk-radios__input" %>
              <%= f.label :sk_citizen_no, "Nie", class: "govuk-label govuk-radios__label" %>
            </div>
          </div>
        </fieldset>
      </div>

      <%= submit_tag 'Pokračovať', class: 'govuk-button' %>
    <% end %>
  </div>
</div>
