<%= content_for :title, build_page_title('Vo voľbách do európskeho parlamentu nemôžete voliť', 'Voľby do európskeho parlamentu') %>
<%= content_for(:headerline, 'Voľby do európskeho parlamentu') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for 'apps_ep_vote_app_application_form', :builder => AppFormBuilder, url: apps_ep_vote_app_application_forms_path do |f| %>
      <%= render 'apps/ep_vote_app/application_forms/back', form: f %>
      <%= f.hidden_field :step, value: 'other_nationality' %>
    <% end %>

    <h1 class="govuk-heading-xl">Vo voľbách do európskeho parlamentu nemôžete voliť</h1>
    <p class="govuk-body-lead">
      Ak nemáte európske občianstvo, nemôžete voliť vo voľbách do európskeho parlamentu.
    </p>

    <%= render 'apps/ep_vote_app/application_forms/subscribe' %>
  </div>
</div>
