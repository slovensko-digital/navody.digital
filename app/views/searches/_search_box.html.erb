<div class="sdn-searchbar-wrapper">
  <div class="sdn-searchbar-wrapper__item govuk-width-container">
    <div class="govuk-!-padding-top-5 govuk-!-padding-bottom-0">
    <div class="govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <h2 class="govuk-heading-l" style="color: #ffffff">
              Jednoduché návody ako vybaviť úradné záležitosti
          </h2>
        </div>
      </div>
    </div>
    </div>
    <%= form_tag(search_path, method: :get) do %>
      <div class="sdn-searchbar govuk-!-padding-top-0">
        <div class="sdn-searchbar__item sdn-searchbar-block">
          <div class="sdn-searchbar-block__item">
            <%= search_field_tag(:q, @q, class: 'govuk-input', placeholder: 'Vyhľadať životnú situáciu', autocomplete: :off) %>
          </div>
          <div class="sdn-searchbar-block__item sdn-searchbar-block__item--stretched">
            <%= submit_tag("Hľadať", class: 'govuk-button govuk-button--large', name: nil) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
