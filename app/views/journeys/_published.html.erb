<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-body sdn-content">
      <%= render partial: 'shared/title_with_last_checked_on', locals: { title: 'Úvodné informácie', last_checked_on: @journey.last_checked_on } %>
      <%= raw_with_custom_components @journey.description, journey: @journey %>
    </div>

    <%= render 'journeys/todo_list', step: @step %>

    <%= render partial: 'components/next_step', object: @next_step, locals: { journey: @journey } %>
  </div>
  <% if @journey.steps.any? %>
    <div class="govuk-grid-column-one-third">
      <%= render 'components/timeline' %>
    </div>
  <% end %>
</div>

<% content_for :json_ld do %>
  <%== how_to_json_ld(@journey) %>
<% end %>
