<% content_for :title, build_journey_page_title(@journey) %>
<%= content_for(:headerline, @journey.title) %>
<%= content_for :description, truncate(strip_tags(@journey.description), length: 500) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-body sdn-content">
      <h2 class="govuk-heading-l">Úvodné informácie</h2>

      <% if @journey.blank? %>
        <%= render partial: 'journeys/blank', locals: {journey_id: @journey.id}%>
      <% else %>
        <%= raw @journey.description %>
      <% end %>

    </div>

    <%= render 'journeys/todo_list', step: @step %>

    <%= render partial: 'components/next_step', object: @next_step, locals: {journey: @journey} %>
  </div>
  <div class="govuk-grid-column-one-third">
    <%= render 'components/timeline' %>
  </div>
</div>

